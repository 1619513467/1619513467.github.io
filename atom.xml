><br><span class="line">flag&#x3D;true;</span><br><span class="line">p-&gt;next&#x3D;q-&gt;next;</span><br><span class="line">q&#x3D;p-&gt;next;break;</span><br><span class="line">&#125;</span><br><span class="line">p&#x3D;q;</span><br><span class="line">q&#x3D;q-&gt;next;</span><br><span class="line">&#125;</span><br><span class="line">printf(&quot;\n删除成功！！\n&quot;);</span><br><span class="line">printf(&quot;\n\n删除成功后的学生通讯信息：\n&quot;);</span><br><span class="line">Output(H); </span><br><span class="line">&#125;</span><br><span class="line"></span><br><span class="line">void Add(stud *H) &#x2F;&#x2F;添加学生信息</span><br><span class="line">&#123;</span><br><span class="line">int n;</span><br><span class="line">stud *p, *q;</span><br><span class="line">p&#x3D;H;</span><br><span class="line">while(p-&gt;next) &#x2F;&#x2F;p指向链表的最后一个结点</span><br><span class="line">&#123;</span><br><span class="line">p&#x3D;p-&gt;next;</span><br><span class="line">&#125;</span><br><span class="line">while(true)</span><br><span class="line">&#123;</span><br><span class="line">q&#x3D;(stud *)malloc(sizeof(stud)); &#x2F;&#x2F;申请空间</span><br><span class="line">q-&gt;next &#x3D; NULL;</span><br><span class="line">printf(&quot;\n请输入添加学生的信息：\n&quot;);</span><br><span class="line">printf(&quot;姓名：&quot;); scanf(&quot;%s&quot;, &amp;q-&gt;name); printf(&quot;\n&quot;);</span><br><span class="line">printf(&quot;学号：&quot;); scanf(&quot;%d&quot;, &amp;q-&gt;num); printf(&quot;\n&quot;);</span><br><span class="line">printf(&quot;电话：&quot;); scanf(&quot;%s&quot;, &amp;q-&gt;phone); printf(&quot;\n&quot;);</span><br><span class="line">p-&gt;next&#x3D;q;</span><br><span class="line">p&#x3D;q;</span><br><span class="line">&#x2F;&#x2F;system(&quot;cls&quot;); &#x2F;&#x2F;清屏</span><br><span class="line">    printf(&quot;是否继续添加：1(继续)&#x2F;0(结束)\n&quot;);</span><br><span class="line">scanf(&quot;%d&quot;, &amp;n);</span><br><span class="line">if(n&#x3D;&#x3D;0) break;</span><br><span class="line">&#125;</span><br><span class="line">printf(&quot;\n添加成功！\n&quot;);</span><br><span class="line">printf(&quot;\n\n添加成功后的学生通讯信息：\n&quot;);</span><br><span class="line">Output(H); </span><br><span class="line">&#125;</span><br><span class="line"></span><br><span class="line">int main()</span><br><span class="line">&#123;</span><br><span class="line">stud *H;</span><br><span class="line">H &#x3D; (stud *)malloc(sizeof(stud)); &#x2F;&#x2F;注意，申请空间的时候最好是在主函数中申请</span><br><span class="line">Init(H); &#x2F;&#x2F;初始化，申请一个头结点</span><br><span class="line">bool flag;</span><br><span class="line">int select, m;</span><br><span class="line">while(true)</span><br><span class="line">&#123;</span><br><span class="line">Menu();</span><br><span class="line">printf(&quot;请输入(0-5):\n&quot;);</span><br><span class="line">flag&#x3D;true;</span><br><span class="line">while(flag)</span><br><span class="line">&#123;</span><br><span class="line">flag&#x3D;false;</span><br><span class="line">scanf(&quot;%d&quot;, &amp;select);</span><br><span class="line">if(select&lt;0 || select&gt;5) </span><br><span class="line">&#123;</span><br><span class="line">printf(&quot;输入不正确，请重新输入(0-5):\n&quot;);</span><br><span class="line">flag&#x3D;true;</span><br><span class="line">&#125;</span><br><span class="line">&#125;</span><br><span class="line">switch(select)</span><br><span class="line">&#123;</span><br><span class="line">case 0: return 0; break;</span><br><span class="line">case 1: Input(H); break;</span><br><span class="line">case 2: Add(H); break;</span><br><span class="line">case 3: Del(H); break;</span><br><span class="line">case 4: Find(H); break;</span><br><span class="line">case 5: Output(H); break;</span><br><span class="line">&#125;</span><br><span class="line">printf(&quot;\n请选择:1(继续)&#x2F;0(结束)\n&quot;);</span><br><span class="line">scanf(&quot;%d&quot;, &amp;m);</span><br><span class="line">if(m&#x3D;&#x3D;0)  return 0;</span><br><span class="line">&#x2F;&#x2F;system(&quot;cls&quot;); &#x2F;&#x2F;清屏</span><br><span class="line">&#125;</span><br><span class="line">return 0;</span><br><span class="line">&#125;</span><br></pre></td></tr></table></figure><p>微信公众号<br><img src="https://i.loli.net/2019/12/14/grvWnuzq9eaV7OS.jpg" alt="微信公众号二维码.jpg"></p>]]></content>
    
